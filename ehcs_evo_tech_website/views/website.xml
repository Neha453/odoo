<?xml version="1.0" encoding="utf-8"?>
<odoo>

	 <template id="preheader" inherit_id="website.layout" name="preHeader">
        <xpath expr="//div[@id='wrapwrap']/header/nav" position="before">
            <nav id="preheader">
                <div class="container">
                    <div class="row">
                           <div class="col-lg-12" id="connect">
                            <ul class="list-unstyled" style="margin-bottom : 0rem; margin-left : 70% ">
                                <li style="font-size: 13px;" class="blue">
                               	<i class="fa fa-phone"/> <span class="o_force_ltr" t-field="res_company.phone"/>
                               		<span style="margin-left: 3%;"> Termine </span>
					                <button class="btn btn-sm btn-secondary dropdown-toggle blue" 
					                	type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
					                    <span t-esc="list(filter(lambda lg : lg[0] == lang, languages))[0][2].split('/').pop()"/>
					                    <span class="caret ml4"/>
					                </button>
					                <div class="dropdown-menu" role="menu">
					                    <t t-foreach="languages" t-as="lg">
					                        <a t-att-href="url_for(request.httprequest.path + '?' + keep_query(), lang_code=lg[0])"
					                           class="dropdown-item js_change_lang"
					                           t-att-data-url_code="lg[1]">
					                            <t t-esc="lg[2].split('/').pop()"/>
					                        </a>
					                    </t>
					                </div>
                                </li>
                            </ul>
                            
                       	</div>
                    </div>
                </div>
            </nav>
        </xpath>
    </template>
    
