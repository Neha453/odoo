					<span class="s_parallax_bg oe_img_bg oe_custom_bg"
						style="text-align: center; background-image: url(&quot;/ehcs_evo_tech_website/static/src/img/data/img_6646_3-scaled.jpg&quot;); background-position: 50% 0px;" />
					<div class="container">
						<div class="row s_nb_column_fixed">
							<div class=" jumbotron rounded pt32 pb32 col-lg-12"
								data-name="Box">
								<div class="row">
									<div class="col-lg-12 s_title s_col_no_bgcolor"
										data-name="Title">
										<h1 class="s_title_default" style="text-align: center; ">
											<font style="font-size: 50px; color: white;">
												<b>EVO-TECH INTERNER KUNDENBEREICH</b>
											</font>
										</h1>
									</div>
								</div>
							</div>
						</div>
					</div>
				</section>
				
